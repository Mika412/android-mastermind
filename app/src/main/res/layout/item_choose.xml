<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">
    <View
        android:id="@+id/chooseCicleOne"
        android:layout_width="@dimen/circleChooseSize"
        android:layout_height="@dimen/circleChooseSize"
        android:layout_marginTop="@dimen/circlePadding"
        android:layout_marginBottom="@dimen/circlePadding"
        android:layout_marginLeft="@dimen/circleChooseMarginSides"
        android:layout_marginRight="@dimen/circleChooseMarginSides"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorBlacks"
        android:clickable="true"
        android:tag="0"
        android:gravity="center"/>
    <View
        android:id="@+id/chooseCicleTwo"
        android:layout_width="@dimen/circleChooseSize"
        android:layout_height="@dimen/circleChooseSize"
        android:layout_marginTop="@dimen/circlePadding"
        android:layout_marginBottom="@dimen/circlePadding"
        android:layout_marginLeft="@dimen/circleChooseMarginSides"
        android:layout_marginRight="@dimen/circleChooseMarginSides"
        android:layout_toRightOf="@id/chooseCicleOne"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorBlacks"
        android:tag="0"
        android:gravity="center"/>
    <View
        android:id="@+id/chooseCicleThree"
        android:layout_width="@dimen/circleChooseSize"
        android:layout_height="@dimen/circleChooseSize"
        android:layout_marginTop="@dimen/circlePadding"
        android:layout_marginBottom="@dimen/circlePadding"
        android:layout_marginLeft="@dimen/circleChooseMarginSides"
        android:layout_marginRight="@dimen/circleChooseMarginSides"
        android:layout_toRightOf="@id/chooseCicleTwo"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorBlacks"
        android:tag="0"
        android:gravity="center"/>
    <View
        android:id="@+id/chooseCicleFour"
        android:layout_width="@dimen/circleChooseSize"
        android:layout_height="@dimen/circleChooseSize"
        android:layout_marginTop="@dimen/circlePadding"
        android:layout_marginBottom="@dimen/circlePadding"
        android:layout_marginLeft="@dimen/circleChooseMarginSides"
        android:layout_marginRight="@dimen/circleChooseMarginSides"
        android:layout_toRightOf="@id/chooseCicleThree"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorBlacks"
        android:tag="0"
        android:gravity="center"/>
</RelativeLayout>